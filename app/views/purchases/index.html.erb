<h2><%= t('all_purchases') %></h2>
<div class="row">
  <div class="col s12">
  <% if can? :create, :purchase %>
    <%= link_to(t('purchase.new'), new_purchase_path, class: "waves-effect waves-light btn") %>
  <% end %>
  </div>
</div>

<div class="row">
  <% purchases.each do |purchase|  %>
  <div class="col s12 m3">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <%= image_tag("http://beerhold.it/280/235", class: "activator") %>
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">
          <%= purchase.name %>
          <i class="material-icons right">more_vert</i>
        </span>
        <p><%= link_to(t(:view), purchase_path(purchase)) %></p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">
          <%= purchase.name %>
          <i class="material-icons right">close</i>
        </span>
        <p><%= truncate(purchase.description, length: 150) %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>


