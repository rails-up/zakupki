<h2><%= t('sign_up.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true, class: "validate", required: true %>
      <%= f.label :email %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <span class="character-counter" style="float: left; font-size: 12px; height: 1px;">
        <%= + @minimum_password_length %> characters minimum
      </span>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.label :password_confirmation %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t("sign_up.button"), class: "waves-effect waves-light btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
